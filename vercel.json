{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp))",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ],
  "installCommand": "npm install && cd client && npm install --legacy-peer-deps && cd ../server && npm install",
  "buildCommand": "cd client && npm install --legacy-peer-deps && npm run build:vercel",
  "env": {
    "NODE_ENV": "production",
    "CI": "false",
    "GENERATE_SOURCEMAP": "false",
    "ESLINT_NO_DEV_ERRORS": "true",
    "TSC_COMPILE_ON_ERROR": "true"
  }
}
